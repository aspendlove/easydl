{
    "app-id" : "com.github.copperly123.easydl",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "40",
    "sdk" : "org.gnome.Sdk",
    "command" : "easydl-gui",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=home"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "python3-youtube_dl",
            "buildsystem" : "simple",
            "build-commands" : [
                "pip3 install --exists-action=i --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} \"youtube_dl\" --no-build-isolation"
            ],
            "sources" : [
                {
                    "type" : "file",
                    "url" : "https://files.pythonhosted.org/packages/12/67/a37eb6231ff26b4a4bc7cee2568d44e11ffeddb84a9b0798869a4392f3ce/youtube_dl-2021.5.16.tar.gz",
                    "sha256" : "4e569cb0477428fd96ee6f7e7a6640b7c9416be626ed708ac4b8ada6c5a6ffbe"
                }
            ]
        },
        {
            "name" : "ffmpeg",
            "config-opts" : [
                "--disable-debug",
                "--disable-doc",
                "--disable-static",
                "--enable-gpl",
                "--enable-shared",
                "--disable-ffplay",
                "--disable-devices",
                "--enable-gnutls",
                "--enable-libmp3lame",
                "--enable-libvorbis"
            ],
            "cleanup" : [
                "/share/ffmpeg"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://ffmpeg.org/releases/ffmpeg-4.3.2.tar.xz",
                    "sha256" : "46e4e64f1dd0233cbc0934b9f1c0da676008cad34725113fb7f802cfa84ccddb"
                }
            ]
        },
        {
            "name" : "easydl-gui",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "file:///home/copperly/Documents/Computer/Linux_Programs/Mine/Builder_Projects/easydl-gui"
                }
            ]
        }
    ],
    "build-options" : {
        "env" : {        }
    }
}
